{
 "forward": {
   "timeout_sec": 30,
   "headers": { "Accept": "application/json" }
 },
 "mapping": {
   "answers_path": "answers",
   "fields": {
     "request_id":   { "from": "sessionId" },
     "full_name":    { "from": "customer.name" },
     "email":        { "from": "customer.email", "default": "" },
     "phone_number": { "from": "customer.mobile" },
     "birth_date":   { "from": "customer.birth_date", "default": "" }
   }
   /* Optional: you can keep your 'questions' array for documentation,
      but the current adapter ignores it. */
 },
 "response": { "type": "json" }
}
